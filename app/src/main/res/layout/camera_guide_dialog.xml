<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF" >

    <TextView
        android:id="@+id/camera_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="20dp"
        android:gravity="center"
        android:fontFamily="@font/notosanscjkkr_black"
        android:includeFontPadding="false"
        android:text="촬영 가이드"
        android:textColor="@color/blackText"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/camera_dialog_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="8dp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:background="@drawable/border_bottom"
        android:text="정확한 인식을 위해 다음 안내를 유의하여 촬영해주세요."
        android:textColor="@color/grayText"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_dialog_title" />

    <TextView
        android:id="@+id/camera_dialog_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="전력량계의 숫자를 틀에 정확하게\n맞춘 후 촬영해주세요."
        android:textColor="@color/grayText"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_dialog_sub" />

    <ImageView
        android:id="@+id/machine_image"
        android:layout_width="200dp"
        android:layout_height="210dp"
        android:layout_margin="15dp"
        android:background="@drawable/camera_guide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_dialog_detail" />

    <Button
        android:id="@+id/close_button"
        android:layout_width="95dp"
        android:layout_height="65dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/dialog_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>