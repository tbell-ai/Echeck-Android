<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF" >

    <TextView
        android:id="@+id/machine_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingTop="20dp"
        android:gravity="center"
        android:fontFamily="@font/notosanscjkkr_black"
        android:includeFontPadding="false"
        android:textColor="@color/blackText"
        android:text="전력량계 종류 가이드"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/machine_dialog_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="아래의 전력량계 이미지를 참고하여\n해당 가구의 전력량계를 선택해주세요."
        android:textColor="@color/grayText"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/machine_dialog_title" />

    <ImageView
        android:id="@+id/machine_image"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="15dp"
        android:background="@drawable/machine_guide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/machine_dialog_sub" />

    <TextView
        android:id="@+id/machine_dialog_sub2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:gravity="right"
        android:includeFontPadding="false"
        android:text="※ 실시간 요금계산의 전력량계 인식 기능은\n해당 전력량계만 해당됩니다."
        android:textColor="@color/grayText"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/machine_image" />

    <Button
        android:id="@+id/close_button"
        android:layout_width="95dp"
        android:layout_height="65dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/dialog_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>