<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.co.tbell.echeck">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".views.activity.DormancyActivity"
            android:exported="true" />
        <activity
            android:name=".views.activity.AccountActivity"
            android:exported="true" />
        <activity
            android:name=".views.activity.JoinActivity"
            android:exported="true" />
        <activity
            android:name=".views.activity.LoginActivity"
            android:exported="true" />
        <activity android:name=".views.activity.CompanyInfoActivity" />
        <activity android:name=".views.activity.FaqActivity" />
        <activity android:name=".views.activity.RealtimeChargeActivity" />
        <activity android:name=".views.activity.BeforeElectActivity" />
        <activity android:name=".views.activity.MachineActivity" />
        <activity android:name=".views.activity.UsageActivity" />
        <activity android:name=".views.activity.MypageActivity" />
        <activity android:name=".views.activity.CameraActivity" />
        <activity android:name=".views.activity.SavingGuideActivity" />
        <activity android:name=".views.activity.PermissionActivity" />
        <activity android:name=".views.activity.IntroActivity" />
        <activity android:name=".views.activity.InfoActivity" />
        <activity android:name=".views.activity.AgreeActivity" />
        <activity android:name=".views.activity.EnergyActivity" />
        <activity android:name=".views.activity.EnergyResultActivity" />
        <activity android:name=".views.activity.HomeProductActivity" />
        <activity
            android:name=".views.activity.MainActivity"
            android:label="main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>